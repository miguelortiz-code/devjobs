        <h2>Descripci贸n del puesto</h2>
        <div class="vacante-descripcion">
            {{{vacancy.description}}}
        </div>
        <a href="/vacancy/edit/{{vacancy.url}}" class="btn btn-azul editar-btn">editar vacante</a>
    </section>
    <aside class="sidebar">
