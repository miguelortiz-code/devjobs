<section class="contenedor">
    <form action="/vacancies/edit/{{vacancy.url}}" method="POST" class="default-form">
        <h3>Información General</h3>
        <!-- TITULO -->
        <div class="campo">
            <label for="title">Titulo</label>
            <input type="text" id="title" name="title" placeholder="React Developer" value="{{vacancy.title}}">
        </div>
        <!-- EMPRESA -->
        <div class="campo">
            <label for="company">Empresa</label>
            <input type="text" id="company" name="company" placeholder="Facebook" value="{{vacancy.company}}">
        </div>
        <!-- UBICACION -->
        <div class="campo">
            <label for="ubication">Ubicación</label>
            <input type="text" id="ubication" name="ubication" placeholder="Colombia" value="{{vacancy.ubication}}">
        </div>
        <!-- SALARIO -->
        <div class="campo">
            <label for="salary">Salario(USD) </label>
            <input type="text" id="salary" name="salary" placeholder="$500" value="{{vacancy.salary}}">
        </div>
        <!-- Contrato -->
        <div class="campo">
            <label for="contract">Contrato </label>
            <select name="contract" id="contract">
                {{#typeContract vacancy.contract}}
                    <option value="" disabled >-- Selecciona --</option>
                    <option value="Freelancer">Freelancer</option>
                    <option value="Tiempo Completo">Tiempo Completo</option>
                    <option value="Medio Tiempo">Medio Tiempo</option>
                    <option value="Proyecto">Proyecto</option>
                {{/typeContract}}
            </select>
        </div>
        <!-- Descripción -->
        <h3>Descripción del puesto</h3>
        <div class="campo descripcion">
            <label>Descripción</label>
            <input type="hidden" id="x" name="description" value="{{{vacancy.description}}}">
            <trix-editor input="x"></trix-editor>
        </div>

        <!-- Habilidades -->
       <ul class="lista-conocimientos">
           {{selectSkills skills}}
       </ul>

       <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Editar Vacante" class="btn btn-azul">
       </div>
    </form>
</section>