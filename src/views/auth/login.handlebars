<section class="container">
    <form action="/auth/login" method="POST" class="default-form">
        <!-- Correo Electrónico -->
        <div class="campo">
            <label for="email">Correo Electrónico</label>
            <input type="email" name="email" id="email" placeholder="Johndoe@gmail.com" autocomplete="off">
        </div>
        <!-- Contraseña -->
        <div class="campo">
            <label for="password">Contraseña</label>
            <input type="password" name="password" id="password" placeholder="************">
        </div>

        <div class="campo acciones">
            <a href="/auth/register">Crear Cuenta</a>
            <a href="/auth/recover-password">Recuperar Contraseña</a>
        </div>

        <div class="campo">
            <input type="submit" value="Iniciar Sesión" class="btn btn-azul">
        </div>
    </form>
</section>