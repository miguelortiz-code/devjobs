<main class="container">
    <form action="/account/profile" method="POST" class="default-form">
        <div class="campo">
            <label for="name">Nombre</label>
            <input type="text" name="name" id="name" placeholder="Jhon Doe" value={{user.name}}>
        </div>

        <div class="campo">
            <label for="email">Correo Electrónico</label>
            <input type="email" name="email" id="email" placeholder="Jhondoe@gmail.com" value={{user.email}}>
        </div>
        <div class="campo">
            <label for="password">Contraseña</label>
            <input type="password" name="password" id="password" placeholder="*********">
        </div>
        <div class="campo">
            <label for="confirm_password">Confrimar Contraseña</label>
            <input type="password" name="confirm_password" id="confirm_password" placeholder="*********">
        </div>
        <div class="campo">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>
</main>